<workflow-app  xmlns="uri:oozie:workflow:0.1" name="zayd_hammoudeh_lab2_exercise4">
	<start to="stdev-calc"/>

	<action name="stdev-calc">
		<map-reduce>
			<job-tracker>${resourceManger}</job-tracker>
			<name-node>${nameNode}</name-node>
			<prepare>
				<delete path="${outputDir}"/>
			</prepare>
			<configuration>
				<property>
					<name>mapred.mapper.class</name>
					<value>Stdev.StdevMapper</value>
				</property>
				<property>
					<name>mapred.reducer.class</name>
					<value>Stdev.StdevReducer</value>
				</property>
				<property>
					<name>mapred.input.dir</name>
					<value>"/home/user01/CS286/Labs/Lab2/Exercise4/STDEV/DATA"</value>
				</property>
				<property>
					<name>mapred.output.dir</name>
					<value>"/user/user01/lab2/exercise4/OUT"</value>
				</property>
			</configuration>
		</map-reduce>

		<ok to="end"/>
		<error to="fail"/>
	</action>

	<kill name="fail">
		<message>Exercise 4 failed with error message: [${wf:errorMessage(wf:lastErrorNode())}]</message>
	</kill>

	<end name="stdev-calc"/>
</workflow-app>
